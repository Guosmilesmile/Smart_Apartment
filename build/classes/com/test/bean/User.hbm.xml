<?xml version="1.0"?>    
<!DOCTYPE hibernate-mapping PUBLIC     
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"    
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">    
<hibernate-mapping>    
    <class name="com.test.bean.User" table="u_user" >  
        <id name="id" type="int" column="u_id">  
           <generator class="native"/>   
        </id>  
        <property name="userid" type="java.lang.String">  
            <column name="u_userid" length="255" />  
        </property> 
        <property name="username" type="java.lang.String">  
            <column name="u_username" length="255" />  
        </property> 
        <property name="password" type="java.lang.String">  
            <column name="u_password" length="255" />  
        </property> 
        <property name="housernumber" type="java.lang.Integer">  
            <column name="u_housernumber" length="11" />  
        </property> 
    </class>  
</hibernate-mapping>  